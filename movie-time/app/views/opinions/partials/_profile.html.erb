<div class="row">
	<div class="col-sm-5">
		<img src="<%= asset_url(current_user.photo_url) %>" alt="User Image" class = "img-thumbnail"  srcset="">
	</div>
	<div class="col-sm-7">
		<strong class="text-white text-uppercase pl-1"><%=current_user.username%></strong>
	</div>
</div>
<div class="row pt-3">
	<div class="d-flex flex-column col-sm-6">
		<span class="text-white text-uppercase"><%= current_user.followings.count%></span>
		<span class="text-white text-uppercase">Following</span>
	</div>
	<div class="d-flex flex-column col-sm-6 pl-0">
		<span class="text-white text-uppercase"><%= current_user.followers.count%></span>
		<span class="text-white text-uppercase">Followers</span>
	</div>
</div>