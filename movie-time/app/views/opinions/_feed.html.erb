<div class="column is-half">
    <% if user_signed_in? %>
    <div class="media-content">
        <%= render 'opinions/form' %>
    </div>
    <% end %>

    <div class="card mt-3">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <div class="row">
                    <img class="rounded col-sm-1" src="https://via.placeholder.com/20x20.png?text=Sample+Thumbnail"
                        alt="">
                    <div class="col-sm-8">
                        <p>
                        <strong>Username</strong>
                    </p>
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Illum inventore voluptatibus dolores</div>
                </div>
            </li>
        </ul>
        <% @opinions.each do | opinion | %>
        <div class="box">
            <article class="media">
                <div class="media-left">
                    <figure class="image is-64x64">
                        <%= gravatar_image_tag(opinion.user.email, size: 64, alt: opinion.user.name) %>
                    </figure>
                </div>
                <div class="media-content">
                    <div class="content">
                        <strong><%= opinion.user.name %></strong><br />
                        <small><%= opinion.user.username %></small><br />
                        <p><%= opinion.opinion %></p>
                    </div>
                    <% if user_signed_in? && current_user.id == opinion.user_id %>
                    <nav class="level">
                        <div class="level-left is-mobile">
                            <%= link_to opinion, class: "level-item" do %>
                            <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                            <% end %>
                            <%= link_to edit_opinion_path(opinion), class: "level-item" do %>
                            <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                            <% end %>
                            <%= link_to opinion, method: :delete, data: { confirm: "Are you sure you want to delete this opinion?" } do %>
                            <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                            <% end %>
                        </div>
                    </nav>
                    <% end %>
                </div>
            </article>
        </div>
        <% end %>
    </div>
</div>