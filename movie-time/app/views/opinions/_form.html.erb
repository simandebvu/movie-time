<%= simple_form_for(@opinion) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :text, label: "Tweet about it", input_html: {class: "textarea"}, wrapper:false, label_html: {class: "label"}, placeholder: "Whats happening?", autofocus: true %>
  </div>
</div>
<%= f.button :submit , class: "button is-info" %>
<% end %>