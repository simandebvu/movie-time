<div class="container-fluid">
  <div class="row">
    <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block sidebar collapse">
      <%= render 'opinions/partials/sidebar_menu' %>
    </nav>
    <main role="main" class="col-md-6 ml-sm-auto col-lg-7 px-md-4 mt-3">
      <div class="container mx-auto mt-4 d-flex flex-wrap justify-content-between">
      <h5 class="card-title"><%= @user.username %></h5>
        <p class="card-text"><%= follow_status_btn(@user) %></p>
        
      <%= render partial: 'opinions/opinion', collection: @user_opinions %>
      </div>
    </main>

    <aside class="col-md-3 col-lg-3  pt-3">
      <%= render 'opinions/partials/trends' %>
    </aside>
  </div>
</div>