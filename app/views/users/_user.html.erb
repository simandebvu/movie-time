<div class="card" style="width: 18rem;">
    <img src="<%= asset_url(user.photo_url) %>" class="card-img-top" alt="User Image">
    <div class="card-body">
        <%= link_to user.fullname, user_path(user), class: 'text-dark font-weight-bolder text-decoration-none' %>
        <p class="card-text"><%= user.email %></p>
        <%= follow_status_btn(user) %>
    </div>
</div>